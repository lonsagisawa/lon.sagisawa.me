---
import { Image, Picture } from "@astrojs/image/components"
import logoBlack from "../assets/logo_black.png"
import logoWhite from "../assets/logo_white.png"
---

<header class="sticky top-0 bg-zinc-100/80 dark:bg-zinc-900/80 backdrop-blur">
  <div
    class="container mx-4 lg:mx-8 my-2 flex flex-row justify-start items-center gap-4 min-h-16"
  >
    <a href="/" rel="prefetch" aria-label="Go to the top page">
      <Picture
        src={logoBlack}
        widths={[64, 96, 128, 256]}
        sizes="64px"
        formats={["avif", "webp"]}
        alt=""
        class="logo block dark:hidden"
      />
      <Picture
        src={logoWhite}
        widths={[64, 96, 128, 256]}
        sizes="64px"
        formats={["avif", "webp"]}
        alt=""
        class="logo hidden dark:block"
      />
    </a>
  </div>
</header>

<style>
  header {
    border-top: 0.5rem solid #f4d059;
  }
  .logo {
    width: 64px;
  }
</style>
